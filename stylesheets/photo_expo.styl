.photoExpo
  position absolute
  margin-bottom 100px
  top 60px
  width 75%
  left 12%
  padding 10px
  background-color white
  box-shadow(0px 0px 10px 1px rgba(app-black, .2))
  z-index photoExpo-zi
  display none

  img
    width 100%
    transition opacity .5s

  &.is-loading
    background-color app-light-gray

    img
      opacity .3
